<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="ResourceDictionaryDemo.MyResourceDictionary"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CrossPlatformLibrary.Forms.Controls;assembly=CrossPlatformLibrary.Forms"
    xmlns:converters="clr-namespace:CrossPlatformLibrary.Forms.Converters;assembly=CrossPlatformLibrary.Forms"
    xmlns:effects="clr-namespace:CrossPlatformLibrary.Forms.Effects;assembly=CrossPlatformLibrary.Forms">

    <!--  Paddings, Spacings, Margins  -->
    <x:Double x:Key="SmallSpacing">4</x:Double>
    <x:Double x:Key="MediumSpacing">8</x:Double>
    <x:Double x:Key="StandardSpacing">16</x:Double>

    <Thickness
        x:Key="SmallPadding"
        Left="{StaticResource SmallSpacing}"
        Top="{StaticResource SmallSpacing}"
        Right="{StaticResource SmallSpacing}"
        Bottom="{StaticResource SmallSpacing}" />

    <Thickness
        x:Key="MediumPadding"
        Left="{StaticResource MediumSpacing}"
        Top="{StaticResource MediumSpacing}"
        Right="{StaticResource MediumSpacing}"
        Bottom="{StaticResource MediumSpacing}" />

    <Thickness
        x:Key="StandardPadding"
        Left="{StaticResource StandardSpacing}"
        Top="{StaticResource StandardSpacing}"
        Right="{StaticResource StandardSpacing}"
        Bottom="{StaticResource StandardSpacing}" />

    <Thickness
        x:Key="CardViewPadding"
        Left="{StaticResource StandardSpacing}"
        Top="{StaticResource MediumSpacing}"
        Right="{StaticResource StandardSpacing}"
        Bottom="{StaticResource MediumSpacing}" />

    <Thickness
        x:Key="ButtonMargin"
        Left="{StaticResource MediumSpacing}"
        Top="0"
        Right="{StaticResource MediumSpacing}"
        Bottom="{StaticResource StandardSpacing}" />

    <!--  Colors  -->
    <OnPlatform x:Key="WindowBackgroundTable" x:TypeArguments="Color">
        <On Platform="Android" Value="#F5F5F5" />
        <On Platform="iOS" Value="#EFEFF4" />
    </OnPlatform>
    <OnPlatform x:Key="WindowBackground" x:TypeArguments="Color">
        <On Platform="Android" Value="#F5F5F5" />
        <On Platform="iOS" Value="White" />
    </OnPlatform>
    <OnPlatform x:Key="LabelSectionBackground" x:TypeArguments="Color">
        <On Platform="Android" Value="White" />
        <On Platform="iOS" Value="#EFEFF4" />
    </OnPlatform>
    <OnPlatform x:Key="CardViewBackgroundColor" x:TypeArguments="Color">
        <On Platform="Android" Value="#ECEF5F5F5CEC" />
        <On Platform="iOS" Value="#EFEFF4" />
    </OnPlatform>
    <OnPlatform x:Key="CardViewDividerColor" x:TypeArguments="Color">
        <On Platform="Android" Value="#ECECEC" />
        <On Platform="iOS" Value="#C8C7CC" />
    </OnPlatform>
    <Color x:Key="ButtonBorder">#C8C7CC</Color>
    <Color x:Key="ListSeparator">#C8C7CC</Color>

    <OnPlatform x:Key="CardPadding" x:TypeArguments="Thickness">
        <On Platform="Android" Value="8,16" />
        <On Platform="iOS" Value="0,0,0,16" />
    </OnPlatform>
    <OnPlatform x:Key="CardSpacing" x:TypeArguments="x:Double">
        <On Platform="Android" Value="16" />
        <On Platform="iOS" Value="0" />
    </OnPlatform>

    <OnPlatform
        x:Key="CustomListItemTextStyleSize"
        x:TypeArguments="x:Double"
        Android="16"
        iOS="16"
        WinPhone="13" />
    <OnPlatform
        x:Key="CustomListItemDetailTextStyleSize"
        x:TypeArguments="x:Double"
        Android="13"
        iOS="13"
        WinPhone="13" />
    <OnPlatform
        x:Key="TweetTextSize"
        x:TypeArguments="x:Double"
        Android="14"
        iOS="14"
        WinPhone="14" />
    <OnPlatform
        x:Key="TweetUserTextSize"
        x:TypeArguments="Font"
        Android="SemiBold"
        iOS="SemiBold"
        WinPhone="SemiBold" />

    <!--  Theme colors  -->
    <OnPlatform x:Key="PrimaryTextColor" x:TypeArguments="Color">
        <On Platform="Android" Value="#FF343434" />
        <On Platform="iOS" Value="#FF343434" />
    </OnPlatform>
    <OnPlatform x:Key="PrimaryTextColorBright" x:TypeArguments="Color">
        <On Platform="Android" Value="#FF7E8184" />
        <On Platform="iOS" Value="#FF7E8184" />
    </OnPlatform>

    <Color x:Key="PrimarySuperBright">#FFE5FFFE</Color>
    <Color x:Key="PrimaryBright">#FF00d4c9</Color>
    <Color x:Key="Primary">#FF00A19A</Color>
    <Color x:Key="PrimaryDark">#FF004d49</Color>
    <Color x:Key="Accent">#FF006e68</Color>

    <Color x:Key="ColorCode400">#ff1744</Color>

    <!--  Converters  -->
    <converters:DebugConverter x:Key="DebugConverter" />
    <converters:IsNotEmptyConverter x:Key="IsNotEmptyConverter" />
    <converters:BoolInverter x:Key="BoolInverter" />
    <converters:FirstErrorConverter x:Key="FirstErrorConverter" />
    <converters:NullableDateTimeToFormatConverter x:Key="NullableDateTimeToFormatConverter" />

    <converters:PropertyErrorsToColorConverter
        x:Key="PropertyErrorsToColorConverter"
        NormalColor="{StaticResource PrimaryTextColorBright}"
        ErrorColor="{StaticResource ColorCode400}" />

    <!--  Font Sizes  -->
    <OnPlatform
        x:Key="LittleSize"
        x:TypeArguments="x:Double"
        iOS="11"
        Android="12"
        WinPhone="12" />

    <OnPlatform
        x:Key="MidMediumSize"
        x:TypeArguments="x:Double"
        iOS="12"
        Android="14"
        WinPhone="14" />

    <OnPlatform
        x:Key="MediumSize"
        x:TypeArguments="x:Double"
        iOS="14"
        Android="16"
        WinPhone="16" />

    <OnPlatform
        x:Key="LargeSize"
        x:TypeArguments="x:Double"
        iOS="16"
        Android="18"
        WinPhone="18" />

    <OnPlatform
        x:Key="LargerSize"
        x:TypeArguments="x:Double"
        iOS="18"
        Android="20"
        WinPhone="20" />

    <OnPlatform
        x:Key="BigSize"
        x:TypeArguments="x:Double"
        iOS="20"
        Android="24"
        WinPhone="24" />

    <OnPlatform
        x:Key="ExtraBigSize"
        x:TypeArguments="x:Double"
        iOS="24"
        Android="32"
        WinPhone="32" />

    <OnPlatform
        x:Key="HugeSize"
        x:TypeArguments="x:Double"
        iOS="32"
        Android="48"
        WinPhone="48" />

    <OnPlatform
        x:Key="FontFamily"
        x:TypeArguments="x:String"
        iOS="sans-serif"
        Android="Droid Sans" />

    <OnPlatform
        x:Key="FontFamilyCourierNew"
        x:TypeArguments="x:String"
        iOS="Courier New"
        Android="monospace" />

    <!--  Styles  -->

    <Style x:Key="DrilldownButtonStyle" TargetType="controls:DrilldownButton">
        <Setter Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness"
                Android="0, 8, 0, 0"
                iOS="0, 16, 0, 0"
                WinPhone="0, 16, 0, 0" />
        </Setter>
    </Style>

    <Color x:Key="CustomButtonStyle.TextColor" />

    <Style x:Key="CustomButtonStyle" TargetType="controls:CustomButton">
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="TextColor" Value="{DynamicResource CustomButtonStyle.TextColor}" />
        <Setter Property="FontSize" Value="{DynamicResource LargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
    </Style>


    <Color x:Key="CustomButtonPrimaryStyle.TextColor">White</Color>
    <Color x:Key="CustomButtonPrimaryStyle.BorderColor.Enabled" />
    <Color x:Key="CustomButtonPrimaryStyle.BorderColor.Disabled">#FFCFD1D3</Color>
    <Color x:Key="CustomButtonPrimaryStyle.BackgroundColor.Enabled" />
    <Color x:Key="CustomButtonPrimaryStyle.BackgroundColor.Disabled">#FFCFD1D3</Color>

    <Style
        x:Key="CustomButtonPrimaryStyle"
        TargetType="controls:CustomButton"
        BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="BackgroundColor" Value="{DynamicResource Primary}" />
        <Setter Property="BorderColor" Value="{DynamicResource Primary}" />
        <Setter Property="BackgroundColorPressed" Value="{DynamicResource PrimaryDark}" />
        <Setter Property="BorderColorPressed" Value="{DynamicResource PrimaryDark}" />
        <Setter Property="TextColor" Value="{DynamicResource CustomButtonPrimaryStyle.TextColor}" />
        <Style.Triggers>
            <Trigger TargetType="Button" Property="IsEnabled" Value="True">
                <Setter Property="BackgroundColor" Value="{DynamicResource CustomButtonPrimaryStyle.BackgroundColor.Enabled}" />
                <Setter Property="BorderColor" Value="{DynamicResource CustomButtonPrimaryStyle.BorderColor.Enabled}" />
            </Trigger>
            <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                <Setter Property="BackgroundColor" Value="{DynamicResource CustomButtonPrimaryStyle.BackgroundColor.Disabled}" />
                <Setter Property="BorderColor" Value="{DynamicResource CustomButtonPrimaryStyle.BorderColor.Disabled}" />
            </Trigger>
        </Style.Triggers>
    </Style>


    <Color x:Key="CustomButtonSecondaryStyle.BorderColor.Enabled" />
    <Color x:Key="CustomButtonSecondaryStyle.BorderColor.Disabled">#FFCFD1D3</Color>
    <Color x:Key="CustomButtonSecondaryStyle.BackgroundColor.Enabled">White</Color>
    <Color x:Key="CustomButtonSecondaryStyle.BackgroundColor.Disabled">#FFCFD1D3</Color>

    <Style
        x:Key="CustomButtonSecondaryStyle"
        TargetType="controls:CustomButton"
        BasedOn="{StaticResource CustomButtonStyle}">
        <Setter Property="BackgroundColor" Value="{DynamicResource WindowBackgroundTable}" />
        <Setter Property="BackgroundColorPressed" Value="{DynamicResource WindowBackgroundTable}" />
        <Setter Property="BorderColor" Value="{DynamicResource Primary}" />
        <Setter Property="BorderColorPressed" Value="{DynamicResource Primary}" />
        <Style.Triggers>
            <Trigger TargetType="Button" Property="IsEnabled" Value="True">
                <Setter Property="BackgroundColor" Value="{DynamicResource CustomButtonSecondaryStyle.BackgroundColor.Enabled}" />
                <Setter Property="BorderColor" Value="{DynamicResource CustomButtonSecondaryStyle.BorderColor.Enabled}" />
            </Trigger>
            <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                <Setter Property="BackgroundColor" Value="{DynamicResource CustomButtonSecondaryStyle.BackgroundColor.Disabled}" />
                <Setter Property="BorderColor" Value="{DynamicResource CustomButtonSecondaryStyle.BorderColor.Disabled}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="controls:CustomButton" BasedOn="{StaticResource CustomButtonStyle}" />

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource MediumSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource LabelStyle}" />

    <Style TargetType="controls:CustomLabel" BasedOn="{StaticResource LabelStyle}" />

    <Style x:Key="EntryLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource LargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness"
                Android="4, 0, 0, 0"
                iOS="0, 0, 0, 0"
                WinPhone="0, 0, 0, 0" />
        </Setter>
        <!--<Setter Property="HeightRequest" Value="48" />-->
    </Style>

    <Style x:Key="HyperLinkLabelStyle" TargetType="controls:HyperLinkLabel">
        <Setter Property="TintColor" Value="Blue" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>

    <Style TargetType="controls:HyperLinkLabel" BasedOn="{StaticResource HyperLinkLabelStyle}" />

    <Style
        x:Key="CustomListItemDetailTextStyle"
        TargetType="Label"
        BaseResourceKey="ListItemDetailTextStyle">
        <Setter Property="FontSize" Value="{DynamicResource ListItemDetailTextStyleSize}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColorBright}" />
    </Style>

    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="HeightRequest" Value="{DynamicResource HugeSize}" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource PrimaryTextColorBright}" />
        <Setter Property="BackgroundColor" Value="#FFCFD1D3" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource LargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
    </Style>

    <!--<Style TargetType="Entry" BasedOn="{StaticResource EntryStyle}" >
            </Style>-->

    <Style TargetType="Entry">
        <Setter Property="HeightRequest" Value="48" />
    </Style>

    <!--<Style TargetType="controls:CustomSwitch">
        <Setter Property="TintColor" Value="{DynamicResource Primary}" />
    </Style>-->

    <Style x:Key="LoginEntryStyle" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PrimaryTextColorBright}" />
        <Setter Property="FontSize" Value="{StaticResource LargerSize}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
        <!--  TODO: obsolete?  -->
    </Style>

    <Style x:Key="EditorStyle" TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource LargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
    </Style>

    <Style TargetType="Editor" BasedOn="{StaticResource EditorStyle}" />

    <Style x:Key="PickerStyle" TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest" Value="48" />
    </Style>

    <Style TargetType="Picker" BasedOn="{StaticResource PickerStyle}" />

    <Style x:Key="BindablePickerStyle" TargetType="controls:BindablePicker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderTextColor" Value="{StaticResource PrimaryTextColorBright}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource LargeSize}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
    </Style>

    <Style TargetType="controls:BindablePicker" BasedOn="{StaticResource BindablePickerStyle}" />

    <Style x:Key="ExtendedDatePickerStyle" TargetType="controls:ExtendedDatePicker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderTextColor" Value="{StaticResource PrimaryTextColorBright}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
    </Style>

    <Style TargetType="controls:ExtendedDatePicker" BasedOn="{StaticResource ExtendedDatePickerStyle}" />

    <Style x:Key="DatePickerStyle" TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
    </Style>

    <Style TargetType="DatePicker" BasedOn="{StaticResource DatePickerStyle}" />

    <Style x:Key="TimePickerStyle" TargetType="TimePicker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
    </Style>

    <Style TargetType="TimePicker" BasedOn="{StaticResource TimePickerStyle}" />

    <Style x:Key="ExtendedTimePickerStyle" TargetType="controls:ExtendedTimePicker">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Opacity" Value="1.0" />
        <Setter Property="HeightRequest">
            <OnPlatform
                x:TypeArguments="x:Double"
                Android="48"
                iOS="48"
                WinPhone="48" />
        </Setter>
        <Setter Property="effects:LineColorEffect.ApplyLineColor" Value="True" />
        <Setter Property="effects:LineColorEffect.LineColor" Value="{StaticResource PrimaryTextColorBright}" />
    </Style>

    <Style TargetType="controls:ExtendedTimePicker" BasedOn="{StaticResource ExtendedTimePickerStyle}" />

    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="FontFamily" Value="HelveticaNeue-Thin" />
        <Setter Property="FontSize" Value="{StaticResource HugeSize}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
    </Style>

    <Style x:Key="ValidationLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
        <Setter Property="TextColor" Value="{DynamicResource ColorCode400}" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness"
                Android="4, 0, 0, -44"
                iOS="0, 34, 0, 0"
                WinPhone="0, 34, 0, 0" />
        </Setter>
    </Style>

    <Style x:Key="AnnotationEntryLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource LittleSize}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColorBright}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="Margin">
            <OnPlatform
                x:TypeArguments="Thickness"
                Android="4, 0, 0, 0"
                iOS="0, 0, 0, 0"
                WinPhone="0, 0, 0, 0" />
        </Setter>
    </Style>
</ResourceDictionary>
