<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CrossPlatformLibrary.Forms.Behaviors;assembly=CrossPlatformLibrary.Forms"
    xmlns:controls="clr-namespace:CrossPlatformLibrary.Forms.Controls;assembly=CrossPlatformLibrary.Forms"
    xmlns:effects="clr-namespace:CrossPlatformLibrary.Forms.Effects;assembly=CrossPlatformLibrary.Forms"
    xmlns:local="clr-namespace:SampleApp"
    xmlns:localization="clr-namespace:CrossPlatformLibrary.Forms.Localization;assembly=CrossPlatformLibrary.Forms"
    xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=netstandard"
    xmlns:userControls="clr-namespace:SampleApp.Controls;assembly=SampleApp"
    xmlns:views="clr-namespace:SampleApp.Views;assembly=SampleApp"
    x:Name="Page"
    Title="CrossPlatformLibrary Sample App"
    effects:SafeAreaPadding.Layout="Top,Bottom"
    BackgroundColor="SlateGray">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="CountryItemTemplate">
                <views:CountryViewCell />
            </DataTemplate>

            <DataTemplate x:Key="ColorResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                BackgroundColor="{Binding Value}"
                                FontSize="Small"
                                HorizontalOptions="FillAndExpand"
                                Text="{Binding Value, Converter={StaticResource ColorToHexStringConverter}}"
                                TextColor="{Binding Value, Converter={StaticResource ColorInverter}}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                Text="{Binding Key}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="FontResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="{Binding Value.FontAttributes}"
                                FontFamily="{Binding Value.FontFamily}"
                                FontSize="{Binding Value.FontSize}"
                                HorizontalOptions="StartAndExpand"
                                LineBreakMode="WordWrap"
                                Text="{Binding Value, Converter={StaticResource FontElementToStringConverter}}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                Text="{Binding Key}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="ThicknessItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding Value, Converter={StaticResource ThicknessToStringConverter}}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                Text="{Binding Key}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="GenericResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding Value}"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                HorizontalOptions="Start"
                                Text="{Binding Key}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <views:ResourceItemTemplateSelector
                x:Key="ResourceItemTemplateSelector"
                ColorTemplate="{StaticResource ColorResourceItemTemplate}"
                FontTemplate="{StaticResource FontResourceItemTemplate}"
                GenericTemplate="{StaticResource GenericResourceItemTemplate}"
                ThicknessTemplate="{StaticResource ThicknessItemTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <controls:GradientStackLayout
        EndColor="LightPink"
        GradientOrientation="Vertical"
        HorizontalOptions="FillAndExpand"
        Orientation="Vertical"
        StartColor="LightGray"
        VerticalOptions="FillAndExpand">

        <controls:GridZero HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Demo: Adds safe-area padding to the top of the Grid  -->
            <Grid.Effects>
                <effects:SafeAreaTopPaddingEffect />
            </Grid.Effects>

            <controls:GridZero IsVisible="{Binding IsNotBusyAndHasNoViewModelError}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Demo: Adds safe-area padding to the bottom of the Grid  -->
                <Grid.Effects>
                    <effects:SafeAreaBottomPaddingEffect />
                </Grid.Effects>

                <controls:AlwaysScrollView x:Name="ScrollView">
                    <Grid>
                        <StackLayout IsVisible="{Binding IsNotBusy}">
                            <StackLayout Padding="{DynamicResource Theme.Padding.CardPadding}" Spacing="{DynamicResource Theme.Spacing.MediumSpacing}">

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: SegmentedStatusIndicator--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="SegmentedStatusIndicatorPage"
                                    Text="SegmentedStatusIndicatorPage" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CardView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="CardViewPage"
                                    Text="CardViewPage" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: Drilldown Buttons--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="DrilldownButtonListPage"
                                    Text="Drilldown Buttons" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ValidatablePicker--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="PickersPage"
                                    Text="Validatable Pickers" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ActivityIndicatorService--&gt;" />
                                <Button Command="{Binding ShowActivityIndicatorCommand}" Text="ActivityIndicatorService.Show" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo MultiStateToggleButton--&gt;" />
                                <controls:MultiStateToggleButton>
                                    <controls:MultiStateToggleButton.ItemsSource>
                                        <objectModel:ObservableCollection x:TypeArguments="BindableObject">
                                            <controls:MultiToggleButtonView
                                                Title="{localization:Translate OnButtonText}"
                                                Command="{Binding MultiToggleCommand}"
                                                ImageSource="{controls:ImageResource SampleApp.Resources.Images.camera_outline_black_192.png}"
                                                IsSelected="{Binding IsMultiToggleButtonOn, Mode=TwoWay}" />
                                            <controls:MultiToggleButtonView
                                                Title="{localization:Translate OffButtonText}"
                                                Command="{Binding MultiToggleCommand}"
                                                ImageSource="{controls:ImageResource SampleApp.Resources.Images.camera_outline_black_192.png}"
                                                IsSelected="{Binding IsMultiToggleButtonOff, Mode=TwoWay}" />
                                        </objectModel:ObservableCollection>
                                    </controls:MultiStateToggleButton.ItemsSource>
                                </controls:MultiStateToggleButton>

                                <controls:MultiStateToggleButton
                                    BorderColor="Black"
                                    ButtonBackgroundColor="White"
                                    CornerRadius="20"
                                    HeightRequest="60"
                                    SelectedButtonBackgroundColor="BlueViolet"
                                    Spacing="0">
                                    <controls:MultiStateToggleButton.ItemsSource>
                                        <objectModel:ObservableCollection x:TypeArguments="BindableObject">
                                            <controls:MultiToggleButtonView
                                                Title="{localization:Translate AutomaticButtonText}"
                                                ImageSource="{controls:ImageResource SampleApp.Resources.Images.camera_outline_black_192.png}"
                                                IsSelected="False" />
                                            <controls:MultiToggleButtonView
                                                Title="{localization:Translate OnButtonText}"
                                                Command="{Binding MultiToggleCommand}"
                                                ImageSource="{controls:ImageResource SampleApp.Resources.Images.camera_outline_black_192.png}"
                                                IsSelected="{Binding IsMultiToggleButtonOn, Mode=TwoWay}" />
                                            <controls:MultiToggleButtonView
                                                Title="{localization:Translate OffButtonText}"
                                                Command="{Binding MultiToggleCommand}"
                                                ImageSource="{controls:ImageResource SampleApp.Resources.Images.camera_outline_black_192.png}"
                                                IsSelected="{Binding IsMultiToggleButtonOff, Mode=TwoWay}" />
                                        </objectModel:ObservableCollection>
                                    </controls:MultiStateToggleButton.ItemsSource>
                                </controls:MultiStateToggleButton>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo CustomLabel--&gt;" />
                                <Label Text="Label" />
                                <controls:CustomLabel Text="CustomLabel" />
                                <controls:CustomLabel
                                    HorizontalOptions="Start"
                                    JustifyText="True"
                                    LineBreakMode="WordWrap"
                                    Text="CustomLabel with JustifyText=&quot;True&quot;: Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam."
                                    VerticalOptions="Start" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatableLabel--&gt;" />
                                <controls:ValidatableLabel
                                    BackgroundColor="Transparent"
                                    Placeholder="ValidatableLabel Placeholder"
                                    Text="ValidatableLabel Text" />

                                <controls:GridZero>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:ValidatableLabel
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        BackgroundColor="Aquamarine"
                                        Placeholder="ValidatableLabel"
                                        Text="ValidatableLabel" />
                                    <controls:ValidatableEntry
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        BackgroundColor="LightGoldenrodYellow"
                                        Placeholder="ValidatableEntry"
                                        Text="ValidatableEntry" />
                                    <controls:ValidatableLabel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        BackgroundColor="Aquamarine"
                                        Placeholder="ValidatableLabel"
                                        Text="ValidatableLabel" />
                                    <controls:ValidatableEntry
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BackgroundColor="LightGoldenrodYellow"
                                        IsReadonly="True"
                                        Placeholder="ValidatableEntry"
                                        Text="ValidatableEntry IsReadonly=&quot;True&quot;" />
                                </controls:GridZero>

                                <controls:ValidatableLabel
                                    BackgroundColor="LightBlue"
                                    Placeholder="ValidatableLabel Placeholder"
                                    Text="ValidatableLabel with custom LabelStyle which sets LineBreakMode to &quot;WordWrap&quot;&#x0a;Multiple lines of text&#x0a;Line 3: More text">
                                    <controls:ValidatableLabel.LabelStyle>
                                        <Style BaseResourceKey="EntryLabelStyle" TargetType="Label">
                                            <Setter Property="LineBreakMode" Value="WordWrap" />
                                        </Style>
                                    </controls:ValidatableLabel.LabelStyle>
                                </controls:ValidatableLabel>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo CustomEntry--&gt;" />
                                <controls:GridZero>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:CustomEntry
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Placeholder="CustomEntry"
                                        Text="CustomEntry" />
                                    <Entry
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Placeholder="Xamarin.Forms.Entry"
                                        Text="Xamarin.Forms.Entry" />
                                </controls:GridZero>

                                <controls:CustomEntry
                                    effects:LineColorEffect.ApplyLineColor="True"
                                    effects:LineColorEffect.LineColor="Black"
                                    BackgroundColor="LightGoldenrodYellow"
                                    Placeholder="CustomEntry with LineColorEffect"
                                    Text="" />

                                <controls:CustomEntry
                                    Margin="0"
                                    effects:LineColorEffect.ApplyLineColor="True"
                                    effects:LineColorEffect.LineColor="Red"
                                    BackgroundColor="LightGoldenrodYellow"
                                    FontSize="{DynamicResource Theme.FontSize.H1}"
                                    Placeholder="CustomEntry with Huge FontSize"
                                    Text="" />

                                <controls:CustomEntry
                                    BackgroundColor="LightGoldenrodYellow"
                                    HideBorder="True"
                                    Placeholder="CustomEntry with HideBorder=&quot;True&quot;"
                                    Text="" />
                                <controls:CustomEntry
                                    BackgroundColor="LightGoldenrodYellow"
                                    Placeholder="CustomEntry with RemovePadding=&quot;True&quot;"
                                    RemovePadding="True"
                                    Text="" />

                                <controls:CustomEntry Placeholder="CustomEntry with TextContentType=&quot;FirstName&quot;" TextContentType="FirstName" />
                                <controls:CustomEntry Placeholder="CustomEntry with TextContentType=&quot;LastName&quot;" TextContentType="LastName" />
                                <controls:CustomEntry
                                    Keyboard="Email"
                                    Placeholder="CustomEntry with TextContentType=&quot;Username&quot;"
                                    TextContentType="Username" />
                                <controls:CustomEntry
                                    Keyboard="Email"
                                    Placeholder="CustomEntry with TextContentType=&quot;EmailAddress&quot;"
                                    TextContentType="EmailAddress" />
                                <controls:CustomEntry
                                    Keyboard="Telephone"
                                    Placeholder="CustomEntry with TextContentType=&quot;PhoneNumber&quot;"
                                    TextContentType="PhoneNumber" />
                                <controls:CustomEntry
                                    IsPassword="True"
                                    Placeholder="CustomEntry with TextContentType=&quot;Password&quot;"
                                    TextContentType="Password" />
                                <controls:CustomEntry
                                    IsPassword="True"
                                    Placeholder="CustomEntry with TextContentType=&quot;NewPassword&quot;"
                                    TextContentType="NewPassword" />
                                <controls:CustomEntry
                                    Keyboard="Numeric"
                                    Placeholder="CustomEntry with TextContentType=&quot;OneTimeCode&quot;"
                                    TextContentType="OneTimeCode" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatableEntry--&gt;" />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:ValidatableEntry
                                        x:Name="UserNameEntry"
                                        Grid.Column="0"
                                        IsReadonly="{Binding IsReadonly}"
                                        Placeholder="ValidatableEntry"
                                        Text="{Binding UserName, Mode=TwoWay}"
                                        TrailingIcon="{controls:ImageResource SampleApp.Resources.Images.rectangle_magenta_192.png}"
                                        TrailingIconCommand="{Binding CalloutCommand}"
                                        TrailingIconCommandParameter="{Binding Text, Source={x:Reference UserNameEntry}}"
                                        ValidationErrors="{Binding Validation.Errors[UserName]}">
                                        <controls:ValidatableEntry.Behaviors>
                                            <behaviors:MaxLengthTextBehavior MaxLength="{Binding UserNameMaxLength}" />
                                        </controls:ValidatableEntry.Behaviors>
                                    </controls:ValidatableEntry>
                                    <Entry
                                        Grid.Column="1"
                                        Placeholder="Xamarin.Forms.Entry"
                                        Text="{Binding UserName, Mode=TwoWay}" />
                                </Grid>
                                <controls:ValidatableEntry
                                    x:Name="ValidatableEntryTest1"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    Placeholder="{Binding Text, Source={x:Reference ValidatableEntryTest1}}"
                                    Text="ValidatableEntry's Placeholder sizing test" />
                                <controls:ValidatableEntry
                                    x:Name="ValidatableEntryTest2"
                                    Placeholder="ValidatableEntry with ValidationErrors"
                                    Text="ValidatableEntry with ValidationErrors"
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEntryTest2}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo SearchBar--&gt;" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder=""
                                    Text="SearchBar with Text" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder=""
                                    Text="SearchBar with Text (Disabled)" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder="SearchBar Placeholder"
                                    Text="" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder="SearchBar Placeholder (Disabled)"
                                    Text="" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatableAutoCompleteView--&gt;" />
                                <controls:ValidatableAutoCompleteView
                                    x:Name="AutoCompleteView"
                                    DisplayMemberPath="Name"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    Placeholder="ValidatableAutoCompleteView"
                                    SearchCommand="{Binding AutoCompleteSearchCommand}"
                                    SearchCommandDelay="{x:Static local:App.SearchCommandDelay}"
                                    SelectedItem="{Binding Country, Mode=TwoWay}"
                                    SuggestedItemTemplate="{StaticResource CountryItemTemplate}"
                                    SuggestedItemsSource="{Binding SuggestedCountries, Mode=OneWay}"
                                    SuggestedItemsSpacing="{DynamicResource Theme.Spacing.Small}"
                                    Text="{Binding CountrySearchText, Mode=TwoWay}"
                                    TextChanged="AutoCompleteView_OnTextChanged"
                                    ValidationErrors="{Binding Validation.Errors[Country]}" />

                                <controls:GridZero>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:ValidatableAutoCompleteView
                                        BackgroundColor="Aquamarine"
                                        DisplayMemberPath="Name"
                                        Placeholder="ValidatableAutoCompleteView"
                                        Text="ValidatableAutoCompleteView" />
                                    <controls:ValidatableEntry
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        BackgroundColor="LightGoldenrodYellow"
                                        Placeholder="ValidatableEntry"
                                        Text="ValidatableEntry" />
                                </controls:GridZero>

                                <controls:ValidatableAutoCompleteView
                                    x:Name="ValidatableAutoCompleteView"
                                    DisplayMemberPath="Name"
                                    Placeholder="ValidatableAutoCompleteView"
                                    SuggestedItemTemplate="{StaticResource CountryItemTemplate}"
                                    SuggestedItemsSource="{Binding Countries, Mode=OneWay}"
                                    Text="ValidatableAutoCompleteView with ValidationErrors"
                                    ValidationErrors="{Binding Source={x:Reference ValidatableAutoCompleteView}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatablePicker--&gt;" />
                                <controls:ValidatablePicker
                                    x:Name="ValidatablePickerTest1"
                                    DisplayMemberPath="Name"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    ItemsSource="{Binding Countries}"
                                    NullString="&lt;Default Country&gt;"
                                    Placeholder="ValidatablePicker by Country.Name"
                                    SelectedItem="{Binding Country, Mode=TwoWay}"
                                    ValidationErrors="{Binding Validation.Errors[Country]}" />

                                <controls:ValidatablePicker
                                    x:Name="ValidatablePickerTest2"
                                    ItemsSource="{Binding Countries}"
                                    Placeholder="ValidatablePicker with ValidationErrors"
                                    SelectedItem="{Binding Country, Mode=TwoWay}"
                                    ValidationErrors="{Binding Source={x:Reference ValidatablePickerTest2}, Path=SelectedItem, Converter={StaticResource RandomValidationErrorsConverter}}" />

                                <Button Command="{Binding SetFantasyLandCommand}" Text="Select non-existing 'Fantasy Land'" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ExtendedDatePicker--&gt;" />
                                <controls:ExtendedDatePicker
                                    Format="d"
                                    NullableDate="{x:Null}"
                                    Placeholder="ExtendedDatePicker with NullableDate" />
                                <controls:ExtendedDatePicker
                                    Format="D"
                                    NullableDate="{Binding Birthdate, Mode=TwoWay}"
                                    Placeholder="ExtendedDatePicker with Birthdate" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatableDatePicker--&gt;" />
                                <controls:ValidatableDatePicker
                                    Date="{Binding Birthdate, Mode=TwoWay}"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    Placeholder="ValidatableDatePicker"
                                    ReadonlyText="{Binding Birthdate, Mode=OneWay, Converter={StaticResource ShortDateConverter}}"
                                    ValidationErrors="{Binding Validation.Errors[Birthdate]}" />

                                <controls:ValidatableDatePicker
                                    Date="{Binding Birthdate, Mode=TwoWay}"
                                    IsReadonly="True"
                                    Placeholder="ValidatableDatePicker IsReadonly=&quot;True&quot;"
                                    ReadonlyText="{Binding Birthdate, Mode=OneWay, Converter={StaticResource ShortDateConverter}}"
                                    ValidationErrors="{Binding Validation.Errors[Birthdate]}" />

                                <controls:ValidatableDatePicker
                                    x:Name="ValidatableDatePickerTest2"
                                    Date="{Binding Birthdate, Mode=TwoWay}"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    Placeholder="ValidatableDatePicker with ValidationErrors"
                                    ReadonlyText="{Binding Birthdate, Mode=OneWay, Converter={StaticResource ShortDateConverter}}"
                                    ValidationErrors="{Binding Source={x:Reference ValidatableDatePickerTest2}, Path=Date, Converter={StaticResource RandomValidationErrorsConverter}}" />

                                <controls:AlwaysScrollView Orientation="Horizontal">
                                    <controls:GridZero>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <controls:ValidatableDatePicker
                                            BackgroundColor="Aquamarine"
                                            Date="{x:Null}"
                                            Placeholder="ValidatableDatePicker" />
                                        <controls:ValidatableEntry
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            BackgroundColor="LightGoldenrodYellow"
                                            Placeholder="ValidatableEntry"
                                            Text="" />
                                    </controls:GridZero>
                                </controls:AlwaysScrollView>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ExtendedTimePicker--&gt;" />
                                <controls:ExtendedTimePicker
                                    Format="t"
                                    NullableTime="{x:Null}"
                                    Placeholder="ExtendedTimePicker with ShortTimePattern" />
                                <controls:ExtendedTimePicker
                                    Format="T"
                                    NullableTime="{Binding Birthdate, Mode=TwoWay}"
                                    Placeholder="ExtendedTimePicker with LongTimePattern" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo ValidatableDateTimePicker--&gt;" />
                                <controls:ValidatableDateTimePicker
                                    Date="{Binding Birthdate, Mode=TwoWay}"
                                    IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                    Placeholder="Birthdate with ValidatableDateTimePicker"
                                    ReadonlyText="{Binding Birthdate, Mode=OneWay, Converter={StaticResource ShortDateConverter}}"
                                    ValidationErrors="{Binding Validation.Errors[Birthdate]}" />

                                <controls:AlwaysScrollView Orientation="Horizontal">
                                    <controls:GridZero>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <controls:ValidatableDateTimePicker
                                            BackgroundColor="Aquamarine"
                                            Date="{x:Null}"
                                            Placeholder="ValidatableDateTimePicker"
                                            Time="{x:Null}" />
                                        <controls:ValidatableEntry
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            BackgroundColor="LightGoldenrodYellow"
                                            Placeholder="ValidatableEntry"
                                            Text="" />
                                    </controls:GridZero>
                                </controls:AlwaysScrollView>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ErrorBox--&gt;" />
                                <controls:ErrorBox Text="Some error message" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ValidationErrorBox--&gt;" />
                                <controls:ValidationErrorBox Validation="{Binding Validation}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CustomEditor--&gt;" />
                                <Editor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="Xamarin.Forms.Editor"
                                    Text="{Binding Notes, Mode=TwoWay}" />
                                <controls:CustomEditor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="CustomEditor"
                                    Text="{Binding Notes, Mode=TwoWay}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ValidatableEditor--&gt;" />
                                <controls:ValidatableEditor
                                    x:Name="ValidatableEditorTest1"
                                    Placeholder="ValidatableEditor"
                                    Text=""
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest1}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <controls:ValidatableEditor
                                    x:Name="ValidatableEditorTest2"
                                    Placeholder="ValidatableEditor"
                                    Text="ValidatableEditor with Text: Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam."
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest2}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <controls:ValidatableEditor
                                    Grid.Row="0"
                                    Grid.Column="0"
