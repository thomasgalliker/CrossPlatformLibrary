<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CrossPlatformLibrary.Forms.Controls;assembly=CrossPlatformLibrary.Forms"
    xmlns:effects="clr-namespace:CrossPlatformLibrary.Forms.Effects;assembly=CrossPlatformLibrary.Forms"
    xmlns:localization="clr-namespace:CrossPlatformLibrary.Forms.Localization;assembly=CrossPlatformLibrary.Forms"
    xmlns:userControls="clr-namespace:SampleApp.Controls;assembly=SampleApp"
    xmlns:views="clr-namespace:SampleApp.Views;assembly=SampleApp"
    x:Name="Page"
    Title="CrossPlatformLibrary Sample App"
    effects:SafeAreaPadding.Layout="Top,Bottom"
    BackgroundColor="SlateGray">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="CountryItemTemplate">
                <views:CountryViewCell />
            </DataTemplate>

            <DataTemplate x:Key="ColorResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                BackgroundColor="{Binding Value}"
                                FontSize="Small"
                                Text="{Binding Value, Converter={StaticResource ColorToHexStringConverter}}"
                                TextColor="{Binding Value, Converter={StaticResource ColorInverter}}"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                Text="{Binding Key}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="FontResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="{Binding Value.FontAttributes}"
                                FontFamily="{Binding Value.FontFamily}"
                                FontSize="{Binding Value.FontSize}"
                                LineBreakMode="WordWrap"
                                Text="{Binding Value, Converter={StaticResource FontElementToStringConverter}}"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                Text="{Binding Key}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="ThicknessItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding Value, Converter={StaticResource ThicknessToStringConverter}}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                Text="{Binding Key}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <DataTemplate x:Key="GenericResourceItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding ResourceType}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="1"
                                FontSize="Small"
                                LineBreakMode="CharacterWrap"
                                Text="{Binding Value}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                            <Label
                                Grid.Column="2"
                                FontSize="Small"
                                Text="{Binding Key}"
                                HorizontalOptions="Start"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>

            <views:ResourceItemTemplateSelector
                x:Key="ResourceItemTemplateSelector"
                ColorTemplate="{StaticResource ColorResourceItemTemplate}"
                FontTemplate="{StaticResource FontResourceItemTemplate}"
                GenericTemplate="{StaticResource GenericResourceItemTemplate}"
                ThicknessTemplate="{StaticResource ThicknessItemTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <controls:GradientStackLayout
        GradientOrientation="Vertical"
        Orientation="Vertical"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        StartColor="LightGray"
        EndColor="LightPink">

        <controls:GridZero HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Demo: Adds safe-area padding to the top of the Grid  -->
            <Grid.Effects>
                <effects:SafeAreaTopPaddingEffect />
            </Grid.Effects>

            <controls:GridZero IsVisible="{Binding IsNotBusyAndHasNoViewModelError}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Demo: Adds safe-area padding to the bottom of the Grid  -->
                <Grid.Effects>
                    <effects:SafeAreaBottomPaddingEffect />
                </Grid.Effects>

                <controls:AlwaysScrollView x:Name="ScrollView">
                    <Grid>
                        <StackLayout IsVisible="{Binding IsNotBusy}">
                            <StackLayout Padding="{DynamicResource Theme.Padding.CardPadding}" Spacing="{DynamicResource Theme.Spacing.MediumSpacing}">

                                <controls:ValidatablePicker
                                    DisplayMemberPath="NativeName"
                                    ItemsSource="{Binding Languages}"
                                    Placeholder="{localization:Translate LanguageLabelText}"
                                    SelectedItem="{Binding Path=Language, Mode=TwoWay}"
                                    SelectedValuePath="DisplayName" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: TintImageEffect--&gt;" />
                                <Image
                                    effects:TintImageEffect.TintColor="{Binding IsReadonly, Converter={StaticResource BoolToBlackAndWhiteConverter}}"
                                    Aspect="AspectFit"
                                    HeightRequest="100"
                                    Source="{controls:ImageResource SampleApp.Resources.Images.rectangle_magenta_192.png}"
                                    WidthRequest="100">

                                    <Image.Effects>
                                        <effects:TintImageEffect />
                                    </Image.Effects>
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ToggleSwitchCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: AutoCompleteView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="AutoCompletePage"
                                    Text="AutoCompleteView" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: Behaviors--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="BehaviorDemoPage"
                                    Text="Behaviors" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: SegmentedStatusIndicator--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="SegmentedStatusIndicatorPage"
                                    Text="SegmentedStatusIndicatorPage" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CardView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="CardViewPage"
                                    Text="CardViewPage" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: Drilldown Buttons--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="DrilldownButtonListPage"
                                    Text="Drilldown Buttons" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CustomEntry--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="EntryPage"
                                    Text="CustomEntry" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CustomLabel--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="LabelDemoPage"
                                    Text="CustomLabel" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ListView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="ListViewDemoPage"
                                    Text="ListView" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: Pickers--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="PickersPage"
                                    Text="Pickers" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: Switches--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="SwitchesPage"
                                    Text="Switches Page" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ToggleView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="ToggleViewDemoPage"
                                    Text="ToggleView Demo" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: MultiStateToggleButton--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="MultiStateToggleButtonDemoPage"
                                    Text="MultiStateToggleButton Demo" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ActivityIndicatorService--&gt;" />
                                <Button Command="{Binding ShowActivityIndicatorCommand}" Text="ActivityIndicatorService.Show" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo SearchBar--&gt;" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder=""
                                    Text="SearchBar with Text" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder=""
                                    Text="SearchBar with Text (Disabled)" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder="SearchBar Placeholder"
                                    Text="" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder="SearchBar Placeholder (Disabled)"
                                    Text="" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ErrorBox--&gt;" />
                                <controls:ErrorBox Text="Some error message" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ValidationErrorBox--&gt;" />
                                <controls:ValidationErrorBox Validation="{Binding Validation}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: CustomEditor--&gt;" />
                                <Editor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="Xamarin.Forms.Editor"
                                    Text="{Binding Notes, Mode=TwoWay}" />
                                <controls:CustomEditor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="CustomEditor"
                                    Text="{Binding Notes, Mode=TwoWay}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo: ValidatableEditor--&gt;" />
                                <controls:ValidatableEditor
                                    x:Name="ValidatableEditorTest1"
                                    Placeholder="ValidatableEditor"
                                    Text=""
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest1}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <controls:ValidatableEditor
                                    x:Name="ValidatableEditorTest2"
                                    Placeholder="ValidatableEditor"
                                    Text="ValidatableEditor with Text: Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam."
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest2}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <controls:ValidatableEditor
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    MaxLines="3"
                                    Placeholder="ValidatableEditor with MaxLength/MaxLines"
                                    Text="{Binding Notes, Mode=TwoWay}"
                                    ValidationErrors="{Binding Errors[Notes]}">
                                    <controls:ValidatableEditor.Keyboard>
                                        <Keyboard x:FactoryMethod="Create">
                                            <x:Arguments>
                                                <KeyboardFlags>CapitalizeSentence,Spellcheck</KeyboardFlags>
                                            </x:Arguments>
                                        </Keyboard>
                                    </controls:ValidatableEditor.Keyboard>
                                </controls:ValidatableEditor>

                                <controls:GridZero>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <controls:ValidatableEditor
                                        Grid.Column="0"
                                        BackgroundColor="Aquamarine"
                                        HidePlaceholder="False"
                                        Placeholder="ValidatableEditor"
                                        Text="" />
                                    <controls:ValidatableEntry
                                        Grid.Column="1"
                                        BackgroundColor="LightGoldenrodYellow"
                                        Placeholder="ValidatableEntry"
                                        Text="" />
                                </controls:GridZero>
                                <Grid />

                                <userControls:NotesView BindingContext="{Binding .}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo CustomEditor with hidden keyboard--&gt;" />
                                <Editor Text="{Binding LogContent, Mode=OneWay}" />
                                <controls:CustomEditor
                                    Margin="0"
                                    HideKeyboard="True"
                                    Keyboard="Text"
                                    Text="{Binding LogContent, Mode=OneWay}"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo HyperLinkLabel--&gt;" />
                                <controls:HyperLinkLabel
                                    NavigateCommand="{Binding MailNavigateCommand}"
                                    Text="{Binding AdminEmailAddress, Mode=OneWay}"
                                    TintColor="Red" />
                                <controls:HyperLinkLabel NavigateUri="mailto:anothermail@someaddress.com" Text="Click here: anothermail@someaddress.com" />
                                <controls:HyperLinkLabel
                                    NavigateUri="http://www.thomasgalliker.ch"
                                    Text="Click here to navigate to www.thomasgalliker.ch"
                                    TextColor="Black"
                                    TintColor="Blue" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo DividerLine--&gt;" />
                                <controls:DividerLine />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo StackedList (Horizontal)--&gt;" />
                                <controls:StackedList
                                    ItemTemplate="{StaticResource CountryItemTemplate}"
                                    ItemsSource="{Binding Countries, Mode=OneWay}"
                                    ListOrientation="Horizontal"
                                    SelectedItem="{Binding Country, Mode=TwoWay}"
                                    SelectionMode="None"
                                    Spacing="0" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo StackedGrid --&gt;" />
                                <controls:StackedGrid
                                    ItemTemplate="{StaticResource CountryItemTemplate}"
                                    ItemsSource="{Binding Countries, Mode=OneWay}"
                                    SelectedItem="{Binding Country, Mode=TwoWay}" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo BindableStackLayout--&gt;" />
                                <controls:BindableStackLayout
                                    ItemTemplate="{StaticResource CountryItemTemplate}"
                                    ItemsSource="{Binding Countries}"
                                    Orientation="Vertical" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo NoBarsScrollViewer--&gt;" />
                                <controls:NoBarsScrollViewer Orientation="Horizontal">
                                    <controls:StackLayoutZero Orientation="Horizontal">
                                        <Label
                                            BackgroundColor="LightGreen"
                                            Text="Label Green &gt;&gt;&gt;"
                                            WidthRequest="333" />
                                        <Label
                                            BackgroundColor="LightCoral"
                                            Text="&lt;&lt;&lt; Label Red &gt;&gt;&gt;"
                                            WidthRequest="333" />
                                        <Label
                                            BackgroundColor="LightBlue"
                                            Text="&lt;&lt;&lt; Label Blue"
                                            WidthRequest="333" />
                                    </controls:StackLayoutZero>
                                </controls:NoBarsScrollViewer>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo FontFamily, FontSize, FontAttributes--&gt;" />
                                <StackLayout Orientation="Vertical">
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Micro}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Micro" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Small}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Small" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.MidMedium}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.MidMedium" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Medium}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Medium" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Large}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Large" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XLarge" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XXLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XXLarge" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XXXLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XXXLarge" />

                                    <controls:DividerLine />

                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Body1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Body1}"
                                        FontSize="{DynamicResource Theme.FontSize.Body1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Body1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Body2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Body2}"
                                        FontSize="{DynamicResource Theme.FontSize.Body2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Body2" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Button}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Button}"
                                        FontSize="{DynamicResource Theme.FontSize.Button}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Button" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Input}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Input}"
                                        FontSize="{DynamicResource Theme.FontSize.Input}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Input" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H1}"
                                        FontSize="{DynamicResource Theme.FontSize.H1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H2}"
                                        FontSize="{DynamicResource Theme.FontSize.H2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H2" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H3}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H3}"
                                        FontSize="{DynamicResource Theme.FontSize.H3}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H3" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H4}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H4}"
                                        FontSize="{DynamicResource Theme.FontSize.H4}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H4" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H5}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H5}"
                                        FontSize="{DynamicResource Theme.FontSize.H5}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H5" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H6}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H6}"
                                        FontSize="{DynamicResource Theme.FontSize.H6}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H6" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Caption}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Caption}"
                                        FontSize="{DynamicResource Theme.FontSize.Caption}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Caption" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Overline}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Overline}"
                                        FontSize="{DynamicResource Theme.FontSize.Overline}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Overline" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Title}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Title}"
                                        FontSize="{DynamicResource Theme.FontSize.Title}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Title" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Subtitle1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Subtitle1}"
                                        FontSize="{DynamicResource Theme.FontSize.Subtitle1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Subtitle1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Subtitle2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Subtitle2}"
                                        FontSize="{DynamicResource Theme.FontSize.Subtitle2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Subtitle2" />
                                </StackLayout>

                                <controls:DividerLine />

                                <Button Command="{Binding DumpResourcesCommand}" Text="Dump Resources" />

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo FrameZero--&gt;" />
                                <controls:FrameZero>
                                    <Label Text="Inside a FrameZero" />
                                </controls:FrameZero>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo LongPressEffect--&gt;" />
                                <controls:GridZero Padding="20" BackgroundColor="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Label
                                        x:Name="LongPressLabel"
                                        effects:LongPressEffect.Command="{Binding LongPressCommand}"
                                        effects:LongPressEffect.CommandParameter="{Binding Text, Source={x:Reference LongPressLabel}}"
                                        BackgroundColor="LightBlue"
                                        FontSize="Medium"
                                        LineBreakMode="WordWrap"
                                        Text="Press and hold to run the attached command. This effect can be used if you want to make text accessible e.g. for copy/paste.">
                                        <Label.Effects>
                                            <effects:LongPressEffect />
                                        </Label.Effects>
                                    </Label>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NormalPressCommand}" CommandParameter="{Binding Text, Source={x:Reference LongPressLabel}}" />
                                    </Grid.GestureRecognizers>
                                </controls:GridZero>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo CustomButton (PrimaryStyle)--&gt;" />
                                <controls:CustomButton
                                    x:Name="CustomButtonPrimary"
                                    Command="{Binding SaveProfileButtonCommand}"
                                    IsEnabled="{Binding CanExecuteSaveProfileButtonCommand}"
                                    Style="{StaticResource CustomButtonPrimaryStyle}"
                                    Text="{localization:Translate SaveButtonText}"
                                    VerticalOptions="StartAndExpand" />
                                <controls:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonPrimaryStyle}"
                                    Text="Primary (Enabled)" />
                                <controls:CustomButton
                                    IsEnabled="False"
                                    Style="{DynamicResource CustomButtonPrimaryStyle}"
                                    Text="Primary (Disabled)" />
                                <controls:StackLayoutZero Orientation="Vertical">
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding IsEnabled, StringFormat='IsEnabled={0}', Source={x:Reference CustomButtonPrimary}}" />
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding IsSaving, StringFormat='IsSaving={0}'}" />
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding CanExecuteSaveProfileButtonCommand, StringFormat='CanExecuteSaveProfileButtonCommand={0}'}" />
                                </controls:StackLayoutZero>

                                <Label Style="{StaticResource DemoLabelStyle}" Text="&lt;!--Demo CustomButton (SecondaryStyle)--&gt;" />
                                <controls:CustomButton
                                    x:Name="CustomButtonSecondary"
                                    Command="{Binding LoadDataButtonCommand}"
                                    IsEnabled="{Binding CanExecuteLoadDataButtonCommand}"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="{localization:Translate LoadDataButtonText}"
                                    VerticalOptions="StartAndExpand" />
                                <controls:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="Secondary (Enabled)" />
                                <controls:CustomButton
                                    IsEnabled="False"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="Secondary (Disabled)" />
                                <controls:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonStyle}"
                                    Text="CustomButtonStyle (Enabled)" />
                                <controls:CustomButton
                                    IsEnabled="False"
                                    Style="{DynamicResource CustomButtonStyle}"
                                    Text="CustomButtonStyle (Disabled)" />
                                <controls:CustomButton
                                    Padding="10"
